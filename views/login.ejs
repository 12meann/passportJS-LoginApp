 <% include ./partials/messages %>
<div class="row">
  <div class="col-md-6 m-auto">
    <div class="card">
      <div class="card-body">
        <form class="form-signin container text-center" action="/auth/login" method="POST">
          <i class="fas fa-laptop-code fa-7x mb-3"></i>
          <h1 class="h3 mb-3 font-weight-normal text-center">
            <i class="fas fa-sign-in-alt"></i> Login
          </h1>

          <div class="form-group">
            <div class="input-group">
              <label for="email" class="sr-only">Email address</label>
              <input
                type="email"
                id="email"
                class="form-control"
                placeholder="Email address"
                name="email"
                required
                autofocus
              />
            </div>
          </div>
          <div class="form-group">
            <label for="password" class="sr-only">Password</label>
            <input
              type="password"
              id="password"
              class="form-control"
              placeholder="Password"
              name="password"
              required
            />
          </div>

          <button class="btn btn-lg btn-primary btn-block mb-3" type="submit">
            Login
          </button>
          
          <a href="/forgot" class="text-center">Forgot your password?</a>
          <p class="text-center mt-3 mb-3">OR</p>
      
          <a class="btn btn-lg btn-primary btn-block" href="/auth/google">
            Login using your Google account</a
          >
          <a class="btn btn-lg btn-primary btn-block" href="/auth/facebook"
            >Login using your Facebook account</a
          >
         <p class="mt-3">No account yet? <a href="/auth/register"> Register</a> now!</p>
        </form>
      </div>
    </div>
  </div>
</div>
