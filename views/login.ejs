<div class="row">
  <div class="col-md-6 m-auto">
    <div class="card">
      <div class="card-body">
        <form class="form-signin container text-center">
          <i class="fas fa-laptop-code fa-7x mb-3"></i>
          <h1 class="h3 mb-3 font-weight-normal text-center">
            <i class="fas fa-sign-in-alt"></i> Login
          </h1>

          <div class="form-group">
            <div class="input-group">
              <label for="inputEmail" class="sr-only">Email address</label>
              <input
                type="email"
                id="inputEmail"
                class="form-control"
                placeholder="Email address"
                required
                autofocus
              />
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="sr-only">Password</label>
            <input
              type="password"
              id="inputPassword"
              class="form-control"
              placeholder="Password"
              required
            />
          </div>

          <button class="btn btn-lg btn-primary btn-block" type="submit">
            Login
          </button>
          <a class="btn btn-lg btn-primary btn-block" href="/auth/google">
            Login using your Google account</a
          >
          <a class="btn btn-lg btn-primary btn-block" href="/auth/facebook"
            >Login using your Facebook account</a
          >
          <a class="btn btn-lg btn-primary btn-block" href="/auth/twitter"
            >Login using your Twitter account</a
          >
        </form>
      </div>
    </div>
  </div>
</div>
